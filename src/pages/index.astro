---
import Papa from "papaparse";
import PrintMark from "../components/print-mark.astro";
import AutoLink from "../components/auto-link.astro";
import fs from "node:fs";
import path from "node:path";

const csvUrl =
  import.meta.env.SHEET_URL ||
  "https://docs.google.com/spreadsheets/d/e/2PACX-1vRbS0w-mjXiSVqLJLy4LczQ0BlqiVz1qdbYCyjm6barhqPaCbTUPWvwFs4EMBpkQRWI_udouV_Cx81f/pub?output=csv";

const htmlUrl = csvUrl.replace("/pub?output=csv", "/pubhtml/sheet?headers=false&gid=0");

// Fetch CSV for text data
const csvRes = await fetch(csvUrl, {
  cache: "no-store",
});

if (!csvRes.ok) {
  throw new Error(`Failed to fetch CSV: ${csvRes.status}`);
}

const csv = await csvRes.text();

const parsed = Papa.parse(csv, {
  header: false,
  skipEmptyLines: true,
});

// Convert rows to key-value object
const data: Record<string, string> = {};
parsed.data.forEach((row: any) => {
  if (row[0] && row[1]) {
    data[row[0].toLowerCase().replace(/\s+/g, "_")] = row[1];
  }
});

// Fetch HTML to extract images
const htmlRes = await fetch(htmlUrl, {
  cache: "no-store",
});

if (htmlRes.ok) {
  const html = await htmlRes.text();
  
  // Extract image URLs from HTML
  const imageMatches = html.matchAll(/<img[^>]+src="([^"]+)"/gi);
  const imageUrls: string[] = [];
  
  for (const match of imageMatches) {
    const src = match[1];
    // Only include Google user content images (actual uploaded images)
    if (src.includes('googleusercontent.com') || src.includes('google.com/a/')) {
      imageUrls.push(src);
    }
  }
  
  console.log('Found images:', imageUrls);
  
  // Download first image and save it locally
  if (imageUrls.length > 0) {
    const rootDir = process.cwd();
    const publicDir = path.join(rootDir, 'public', 'images');
    const distDir = path.join(rootDir, 'dist', 'images');
    
    // Ensure the public images directory exists
    if (!fs.existsSync(publicDir)) {
      fs.mkdirSync(publicDir, { recursive: true });
    }
    
    const imageUrl = imageUrls[0];
    try {
      const response = await fetch(imageUrl);
      if (response.ok) {
        const buffer = await response.arrayBuffer();
        
        // Get file extension from content-type or default to jpg
        const contentType = response.headers.get('content-type');
        let ext = 'jpg';
        if (contentType?.includes('png')) ext = 'png';
        if (contentType?.includes('gif')) ext = 'gif';
        if (contentType?.includes('webp')) ext = 'webp';
        
        const filename = `image.${ext}`;
        const imageData = new Uint8Array(buffer);
        
        // Write to public for dev mode
        fs.writeFileSync(path.join(publicDir, filename), imageData);
        console.log(`Downloaded to: public/images/${filename}`);
        
        // Also write to dist if it exists (for production builds)
        if (fs.existsSync(path.join(rootDir, 'dist'))) {
          if (!fs.existsSync(distDir)) {
            fs.mkdirSync(distDir, { recursive: true });
          }
          fs.writeFileSync(path.join(distDir, filename), imageData);
          console.log(`Also copied to: dist/images/${filename}`);
        }
        
        data.image = `/images/${filename}`;
      }
    } catch (error) {
      console.error('Failed to download image:', error);
    }
  }
}

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon-black.svg" media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/svg+xml" href="/favicon-white.svg" media="(prefers-color-scheme: dark)" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{data.title}</title>
  </head>
  <body data-edited={data.last_edited}>
    <div class="printmarks">
      <PrintMark />
      <PrintMark isDouble/>
      <PrintMark scale="-1,1" />
      <PrintMark scale="1,-1" />
      <PrintMark isDouble scale="1,-1" />
      <PrintMark scale="-1,-1" />
    </div>
    <h1>
      <span>{data.title}</span>
      {data.image ? <img src={data.image} alt="Uploaded Image" /> : <></>}
    </h1>
    <div class="description"><AutoLink text={data.description} /></div>
    <div class="note">{data.note}</div>
    <div class="address">{data.address}</div>
    <script>
      function onResize() {
        const windowWidth = window.innerWidth;
        if (windowWidth < 769) {
          const columnWidth = windowWidth - 40;
          const scaleFactor = columnWidth/336;
          document.documentElement.style.setProperty('--font-size-big', `${22.5 * scaleFactor}px`);
          document.documentElement.style.setProperty('--font-size', `${9 * scaleFactor}px`);
        }
        else {
          const columnWidth = windowWidth / 2 - 80;
          const scaleFactor = columnWidth/640;
          document.documentElement.style.setProperty('--font-size-big', `${45 * scaleFactor}px`);
          document.documentElement.style.setProperty('--font-size', `${18 * scaleFactor}px`);
        }
      }
      window.addEventListener("resize", onResize);
      onResize();

      const h1 = document.querySelector("h1 span")!;
      const image = document.querySelector("img");
      if (image) {
        h1.addEventListener("mouseenter", () => {
          const randomAngle = (Math.random() - 0.5) * 10;
          image.style.transform = `rotate(${randomAngle}deg)`;
          image.style.opacity = "1";
        });
        h1.addEventListener("mouseleave", () => {
          image.style.opacity = "0";
        });
      }
    </script>
  </body>
</html>

<style lang="scss" is:global>
  $breakpoint-mobile: 768px;

  @media (max-width: #{$breakpoint-mobile}) {
    .printmarks {
      & > *:nth-child(2), & > *:nth-child(5) {
        display: none;
      }
    }
  }

  a {
    color: inherit
  }
</style>

<style lang="scss">
  $breakpoint-mobile: 768px;

  :root {
    --printmark-gap: 14px;
    --gap: 40px;
    --font-size-big: 3vw;
    --font-size: 1.5vw;
    @media (max-width: #{$breakpoint-mobile}) {
      --font-size-big: 30px;
      --font-size: 15px;
      --gap: 20px;
    }
  }
  html {
    height: 100%;
    cursor: url('/cursor.svg'), auto;
  }
  html,
  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    padding: 0;
    margin: 0;
  }
  * {
    font-family: inherit;
    font-weight: inherit;
    box-sizing: border-box;
  }
  body {
    position: relative;
    font-family: system-ui, sans-serif;
    padding: var(--gap);
    min-height: 100%;
    * {
      font-size: var(--font-size-big);
      white-space: pre-line;
    }
    @media (min-width: #{$breakpoint-mobile + 1}) {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: calc(var(--gap) * 2);
      align-content: space-between;
      *:nth-child(3),
      *:nth-child(4) {
        align-self: end;
      }
    }
    @media (max-width: #{$breakpoint-mobile}) {
      display: flex;
      flex-direction: column;
      & > *:not(:first-child) {
        margin-top: var(--font-size-big);
      }
      h1 {
        flex-grow: 1;
        margin-top: 0 !important;
      }
    }
  }
  h1 {
    position: relative;
  }
  img {
    top: 0;
    right: 0;
    max-height: 50vh;
    position: absolute;
    pointer-events: none;
    opacity: 0;
  }
  .printmarks {
    position: absolute;
    top: var(--printmark-gap);
    left: var(--printmark-gap);
    right: var(--printmark-gap);
    bottom: var(--printmark-gap);
    display: grid;
    grid-template-columns: repeat(3, auto);
    align-content: space-between;
    justify-content: space-between;
    pointer-events: none;
    @media (max-width: #{$breakpoint-mobile}) {
      grid-template-columns: repeat(2, auto);
    }
    & > * {
      opacity: .5;
      transform: scale(10);
    }
  }
  
  .note {
    font-size: var(--font-size);
    @media (max-width: #{$breakpoint-mobile}) {
      order: 1000;
    }
  }

  .address {
    @media (max-width: #{$breakpoint-mobile}) {
      padding-top: var(--font-size-big);
      padding-bottom: var(--font-size-big);
    }
  }
</style>
