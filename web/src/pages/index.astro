---
import PrintMark from "../components/print-mark.astro";

// Sanity config
const projectId = 'whg9r0qe';
const dataset = 'production';
const apiVersion = '2024-01-01';

// Fetch data from Sanity using HTTP API
const query = encodeURIComponent('*[_type == "pageContent"][0]{..., meta {title, description, image{...,asset->{...}}},  description[]{...}, image{...,asset->{...}}}');
const sanityUrl = `https://${projectId}.api.sanity.io/v${apiVersion}/data/query/${dataset}?query=${query}`;

const sanityRes = await fetch(sanityUrl, {
  cache: "no-store",
});

if (!sanityRes.ok) {
  throw new Error(`Failed to fetch from Sanity: ${sanityRes.status}`);
}

const sanityData = await sanityRes.json();
const content = sanityData.result;

// Helper to convert portable text to HTML
function portableTextToHtml(blocks: any[]): string {
  if (!blocks || !Array.isArray(blocks)) return '';
  
  return blocks
    .map((block) => {
      if (block._type !== 'block' || !block.children) return '';
      
      const text = block.children
        .map((child: any) => {
          if (child._type !== 'span') return '';
          
          let content = child.text;
          
          // Handle link marks
          if (child.marks && child.marks.length > 0) {
            child.marks.forEach((mark: string) => {
              // Handle decorators
              if (mark === 'smallcaps') {
                content = `<span style="font-variant: small-caps;">${content}</span>`;
              }
              // Handle annotations
              const markDef = block.markDefs?.find((def: any) => def._key === mark);
              if (markDef) {
                if (markDef._type === 'link') {
                  let href = markDef.link;
                  let attrs = '';
                  if (markDef.linkType === 'email') {
                    href = `mailto:${href}`;
                  } else if (markDef.linkType === 'phone') {
                    href = `tel:${href}`;
                  } else {
                    attrs = ' target="_blank" rel="noopener"';
                  }
                  content = `<a href="${href}"${attrs}>${content}</a>`;
                } else if (markDef._type === 'download' && markDef.file?.asset?._ref) {
                  const fileRef = markDef.file.asset._ref;
                  const fileId = fileRef.replace('file-', '').replace(/-([a-z0-9]+)$/i, '.$1');
                  const href = `https://cdn.sanity.io/files/${projectId}/${dataset}/${fileId}`;
                  content = `<a href="${href}" target="_blank" download>${content}</a>`;
                }
              }
            });
          }
          
          return content;
        })
        .join('');
      
      return text;
    })
    .join('\n');
}


// Transform Sanity data to match expected format
interface ImageAsset {
  image?: {
      asset?: {
        _ref?: string;
        url?: string;
      } | null;
    } | null;
}

interface MetaType {
  title: string;
  description: string;
  image?: ImageAsset;
}

interface DataType {
  meta: MetaType;
  title: string;
  description: string;
  note: string;
  address: string;
  last_edited: string;
  image?: ImageAsset;
}


const meta: MetaType = {
  title: content?.meta?.title || "Title",
  description: content?.meta?.description || "Description",
  image: content?.meta?.image || null,
};

// Build Sanity image URL for meta.image if it exists
if (meta.image?.asset?._ref) {
  const imageRef = meta.image.asset._ref;
  const matches = imageRef.match(/image-([a-f0-9]+)-(\d+x\d+)-(\w+)/);
  if (matches) {
    const [, id, dimensions, format] = matches;
    meta.image.asset.url = `https://cdn.sanity.io/images/${projectId}/${dataset}/${id}-${dimensions}.${format}?w=1200`;
  }
}

// Parse content.image the same way as meta.image
let parsedImage: ImageAsset = content?.image || null;
if (parsedImage?.asset?._ref) {
  const imageRef = parsedImage.asset._ref;
  const matches = imageRef.match(/image-([a-f0-9]+)-(\d+x\d+)-(\w+)/);
  if (matches) {
    const [, id, dimensions, format] = matches;
    parsedImage.asset.url = `https://cdn.sanity.io/images/${projectId}/${dataset}/${id}-${dimensions}.${format}?w=1600`;
  }
}

const data: DataType = {
  meta,
  title: content?.title || '',
  description: portableTextToHtml(content?.description),
  note: portableTextToHtml(content?.note) || '',
  address: portableTextToHtml(content?.address) || '',
  last_edited: content?._updatedAt ? new Date(content._updatedAt).toLocaleDateString() : '',
  image: parsedImage,
};

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon-black.svg" media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/svg+xml" href="/favicon-white.svg" media="(prefers-color-scheme: dark)" />
    <meta name="description" content={data.meta.description} />
    <meta property="og:title" content={data.meta.title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://livmarieroemer.com/" />
    {data.meta?.image?.asset?.url && <meta property="og:image" content={data.meta.image.asset.url} />}
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{data.meta.title}</title>
  </head>
  <body data-edited={data.last_edited}>
    <div class="printmarks">
      <PrintMark origin="0,0" path="M0 16 V0 H16"/>
      <PrintMark origin="50,0" path="M0 0 H32 0 M16 0 V16" width="32"/>
      <PrintMark origin="100,0" path="M16 16 V0 H0"/>
      <PrintMark origin="0,100" path="M0 0 V16 H16"/>
      <PrintMark origin="50,100" path="M0 16 H32 M16 16 V0" width="32"/>
      <PrintMark origin="100,100" path="M16 0 V16 H0"/>
    </div>
    <h1 class="text-offset">
      <span>{data.title}</span>
      {data.image?.asset?.url ? <img src={data.image.asset.url} alt="Uploaded Image" /> : <></>}
    </h1>
    <div class="text-offset description" set:html={data.description}></div>
    <div class="text-offset note" set:html={data.note}></div>
    <div class="text-offset address" set:html={data.address}></div>
    <script>

      function onResize() {
        const windowWidth = window.innerWidth;
        let newFontSizeBig, newFontSize;
        if (windowWidth < 769) {
          const columnWidth = windowWidth - 40;
          const scaleFactor = columnWidth/336;
          newFontSizeBig = `${Math.max(22.5 * scaleFactor, 22.5)}px`;
          newFontSize = `${Math.max(9 * scaleFactor, 9)}px`;
        }
        else {
          const columnWidth = windowWidth / 2 - 80;
          const scaleFactor = columnWidth/640;
          newFontSizeBig = `${45 * scaleFactor}px`;
          newFontSize = `${18 * scaleFactor}px`;
        }
        document.documentElement.style.setProperty('--font-size-big', newFontSizeBig);
        document.documentElement.style.setProperty('--font-size', newFontSize);
        
        const printmarks = document.querySelectorAll<SVGElement>('.printmarks svg');
        const locations = [[375, .5], [1440, 1]]

        const [x1, scale1] = locations[0];
        const [x2, scale2] = locations[1];
        const newScale = scale1 + (windowWidth - x1) * (scale2 - scale1) / (x2 - x1);
        printmarks.forEach(mark => {
          mark.style.transform = `scale(${newScale})`;
          const path = mark.querySelector('path')!;
          path.style.strokeWidth = `${1 / newScale}`;
        });
        
      }
      window.addEventListener("resize", onResize);
      onResize();

      const h1 = document.querySelector("h1 span")!;
      const image = document.querySelector("img")!;
      if (image) {
        function showImage() {
          window.addEventListener("click", hideImage, { once: true });
          const randomAngle = (Math.random() - 0.5) * 10;
          const randomX = Math.random() * (window.innerWidth - image.offsetWidth);
          const randomY = Math.random() * (window.innerHeight - image.offsetHeight);
          image.style.left = `${randomX}px`;
          image.style.top = `${randomY}px`;
          image.style.transform = `rotate(${randomAngle}deg)`;
          image.style.opacity = "1";
        }
        function hideImage() {
          image.style.opacity = "0";
        }
        h1.addEventListener("mouseenter", showImage);
        h1.addEventListener("mouseleave", hideImage);
        h1.addEventListener("touchstart", showImage);
      }
    </script>
  </body>
</html>

<style lang="scss" is:global>
  $breakpoint-mobile: 768px;

  @media (max-width: #{$breakpoint-mobile}) {
    .printmarks {
      & > *:nth-child(2), & > *:nth-child(5) {
        display: none;
      }
    }
  }
  
  a {
    color: inherit
  }
  a:not(:hover) {
    text-decoration: none;
  }

</style>

<style lang="scss">
  $breakpoint-mobile: 768px;

  @font-face {
    font-family: "Tid";
    src: url("/fonts/Tid-Regular.woff2") format("woff2"),
         url("/fonts/Tid-Regular.woff") format("woff");
    font-weight: 400;
    font-style: normal;
  }

  :root {
    --printmark-gap: 14px;
    --gap: 40px;
    --font-size-big: 3vw;
    --line-height-big: calc(45 / 44 * 1em);
    --font-size: 1.5vw;
    --line-height: calc(19 / 18 * 1em);
    --cap-offset: -0.15em;
    --descender-offset: -0.2em;
    @media (max-width: #{$breakpoint-mobile}) {
      --font-size-big: 30px;
      --line-height-big: calc(23.1 / 22.5 * 1em);
      --font-size: 15px;
      --line-height: calc(10 / 9 * 1em);
      --gap: 20px;
      --printmark-gap: 8px;
    }
  }
  html, body {
    overscroll-behavior: none;
    font-family: "Tid", serif;
  }
  html {
    height: 100%;
  }
  html,
  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    padding: 0;
    margin: 0;
  }
  * {
    // font-family: inherit;
    font-weight: inherit;
    box-sizing: border-box;
  }
  body {
    position: relative;
    padding: var(--gap);
    min-height: 100%;
    & > * {
      font-size: var(--font-size-big);
      line-height: var(--line-height-big);
      white-space: pre-line;
      letter-spacing: -0.005em;
    }
    @media (min-width: #{$breakpoint-mobile + 1}) {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: calc(var(--gap) * 2);
      align-content: space-between;
      *:nth-child(3),
      *:nth-child(4) {
        align-self: end;
      }
    }
    @media (max-width: #{$breakpoint-mobile}) {
      display: flex;
      flex-direction: column;
      & > *:not(:first-child) {
        margin-top: var(--font-size-big);
      }
      h1 {
        flex-grow: 1;
        margin-top: 0 !important;
      }
    }
  }
  .text-offset {
    margin-top: var(--cap-offset);
    margin-bottom: var(--descender-offset);
  }
  img {
    max-height: 50vh;
    position: fixed;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .printmarks {
    position: absolute;
    top: var(--printmark-gap);
    left: var(--printmark-gap);
    right: var(--printmark-gap);
    bottom: var(--printmark-gap);
    display: grid;
    grid-template-columns: repeat(3, auto);
    align-content: space-between;
    justify-content: space-between;
    pointer-events: none;
    @media (max-width: #{$breakpoint-mobile}) {
      grid-template-columns: repeat(2, auto);
    }
    & > * {
      opacity: .5;
      transform: scale(10);
    }
  }
  
  .note {
    font-size: var(--font-size);
    line-height: var(--line-height);
    @media (max-width: #{$breakpoint-mobile}) {
      order: 1000;
    }
  }

  .address {
    @media (max-width: #{$breakpoint-mobile}) {
      padding-top: var(--font-size-big);
      padding-bottom: var(--font-size-big);
    }
  }

  .smallcaps {
    font-variant: small-caps;
    letter-spacing: 0.04em;
  }
</style>
